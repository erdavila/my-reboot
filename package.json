{
  "name": "my-reboot",
  "version": "2.0.0",
  "description": "My Reboot",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts .",
    "start": "yarn build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://erdavila@github.com/erdavila/my-reboot.git"
  },
  "author": {
    "name": "Eduardo R. D'Avila",
    "email": "erdavila@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/erdavila/my-reboot#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "electron": "19",
    "electron-builder": "23",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "typescript": "^4.5.4"
  },
  "build": {
    "appId": "my-reboot",
    "productName": "my-reboot",
    "linux": {
      "target": "deb",
      "category": "System;Utility;",
      "icon": "dist/assets"
    },
    "win": {
      "icon": "dist/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Reboot",
      "menuCategory": "My Reboot"
    },
    "files": [
      "dist/*.js",
      "dist/assets/*",
      "dist/get_active_display_device_id.exe"
    ]
  },
  "dependencies": {
    "chalk": "4.1.2"
  }
}
