{
  "name": "my-reboot",
  "version": "2.0.0",
  "description": "My Reboot",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts .",
    "start": "yarn build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://erdavila@github.com/erdavila/my-reboot.git"
  },
  "author": {
    "name": "Eduardo R. D'Avila",
    "email": "erdavila@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/erdavila/my-reboot#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "typescript": "^4.5.4"
  },
  "build": {
    "appId": "my-reboot",
    "productName": "My Reboot",
    "linux": {
      "target": "deb",
      "category": "System",
      "icon": "dist/icon.png"
    },
    "win": {
      "icon": "dist/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "files": [
      "dist/*.js",
      "dist/*.html",
      "dist/*.css",
      "dist/icon.*",
      "dist/get_active_display_device_id.exe"
    ]
  },
  "dependencies": {
    "chalk": "4.1.2"
  }
}
